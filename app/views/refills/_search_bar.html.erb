<div class="search-tools">
<%= simple_form_for :search, :html => {:"data-update-target" => 'cards-container'}, remote: true, method: "get" do |f| %>
  <div class='filter'>
  <%= f.input :city, label: "City" %>
  </div>
  <div class='filter'>
      <%= f.input :state,label: "State" %>
  </div>
  <div class='filter'>
  <%= f.input :zip, label: "Zip" %>
  </div>
  <div class='filter'>
    <%= f.input_field :categories,label: "Categories", class: 'select2 categories ajax', placeholder:"Select a Category",data: { source: categories_path }%>
  </div>
  <div class='filter'>
  <%= f.input :keywords, label: "Keywords" %>
  </div>
  <%= f.submit value: 'Search Skills'%>
<% end %>
</div>
<p class='subtitle'>Can't find what your'e looking for?</p>
<%= button_to "Post a request", new_skill_path, method: :get %>

