<header class="centered-navigation">
  <div class="centered-navigation-wrapper">
    <a href="javascript:void(0)" class="mobile-logo">
      <%= image_tag("http://33.media.tumblr.com/f2033cae50aa722d209ad106b6b89f4f/tumblr_mfspw6aC0I1rha3vbo1_1280.png")%>
    </a>

    <a href="" class="centered-navigation-menu-button" id="js-mobile-menu">MENU</a>
    <ul class="centered-navigation-menu">
      <li class="nav-link logo">
        <%= link_to image_tag("http://33.media.tumblr.com/f2033cae50aa722d209ad106b6b89f4f/tumblr_mfspw6aC0I1rha3vbo1_1280.png"), root_path, :class => 'logo'  %>
      </li>
      <li class="nav-link"><%= fa_icon "graduation-cap" %> <%= link_to "Start Learning",skills_path %></li>
      <li class="nav-link"><%= fa_icon "money" %> <%= link_to "Start Earning",teaching_skills_path %></li>
      <!-- <li class="nav-link"><a href="javascript:void(0)">Sign up</a></li> -->
      <li class="nav-link"><%= link_to "What is SkillClimb",what_is_path %></li>
      <li class="nav-link more"><a href="javascript:void(0)">More Things</a>
        <ul class="submenu">
          <li><%= link_to "Open Skill Requests", skill_requests_path %></li>
          <li><%= link_to "FAQ",faq_path %></li>
          <li><%= link_to "Get in touch",contact_path %></li>
        </ul>
      </li>
      <% if current_user %>
      <li class="nav-link more"><%= link_to "#{current_user.username}", edit_user_registration_path(current_user) %>
        <ul class="submenu">
          <!-- <li><%= link_to "Teaching",teaching_users_path %></li> -->
          <!-- <li><%= link_to "Learning",learning_users_path %></li> -->
          <li><%= link_to "Dashboard",dashboard_path %></li>
          <li class="nav-link">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <%= fa_icon "fa-fw sign-out" %>
              Sign Out
            <% end %>
          </li>
        </ul>
      </li>
      <% else %>
      <li class="nav-link"><%= fa_icon "rocket"%> <%= link_to "Sign Up", new_user_registration_path %></li>
      <div class="sign-in-box">
        <ul>
          <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
          <li><%= f.text_field :username, autofocus: true, placeholder:"Username" %></li>
          <li><%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></li>

          <li class='sign-in-button'><%= fa_icon "sign-in"%> <%= f.submit "Sign In" %></li>
        </ul>
       <% end %>
     </div>
     <% end %>
   </ul>
 </div>
</header>
