<div id="archived">
  <h6 class="title">
    <i class="toggle-info fa fa-chevron-circle-up"></i>Archived Skills
  </h6>
  <ul class="toggle-content">
    <% @archived_skills.each do |skill| %>
      <li>
        <h6>
          <%    path = skill_path(skill)
                edit_path = edit_skill_path(skill) %>
          <%=link_to skill.try(:title), path %>
          <%= link_to edit_path do %>
            <i class="fa fa-gear"></i>
          <% end %>
        </h6>
        <h6 class="category">
          <% categories = skill.try(:categories) || skill.try(:skill).try(:categories) || [] %>
          <%= categories.limit(3).map{|category| category.name}.join(",").to_s%>
        </h6>
      </li>
    <%end%>
  </ul>
</div>