
<div class="sidebar">
  <div id="learning">
    <h5 class="title">Learning<span class="title-action"><%= fa_icon "search-plus"%> <%= link_to "Find More", skills_path, id:'dash-learning-search' %></span></h5>
    <ul>
      <% @apprenticeships.each do |apprenticeship| %>
      <li>
        <h6>
          <span class='level learning'><%=apprenticeship.apprentice_level%></span> <%=link_to apprenticeship.skill.title, skill_path(apprenticeship.skill)%>
           <%= link_to apprenticeship_path(apprenticeship) do %>
            <i class="fa fa-gear"></i>
          <% end %>
        </h6>
        <h6 class="category">
          <%=apprenticeship.skill.categories.map{|category| category.name}.join(",").to_s%>
        </h6>
      </li>
      <%end%>
    </ul>
  </div>
  <div id="earning">
    <h5 class="title">Earning<span class="title-action"><%= fa_icon "plus"%> <%= link_to "Add Skill",new_skill_path, id:'dash-new-skill-btn'%></span></h5>
    <ul>
      <% @earning_skills.each do |skill| %>
      <li>
        <h6>
          <span class='level earning'><%=skill.creator_level%></span> <%=link_to skill.title, skill_path(skill)%>
          <%= link_to edit_skill_path(skill) do %>
            <i class="fa fa-gear"></i>
          <% end %>
        </h6>
        <h6 class="category">
          <%=skill.categories.limit(3).map{|category| category.name}.join(",").to_s%>
        </h6>
      </li>
      <%end%>
    </ul>
  </div>
  <div id="requests">
    <h5 class="title">My Requests<span class="title-action"></h5>
    <ul>
      <% @current_user_requests.each do |request| %>
      <li>
        <h6>
          <span class='status-<%=request.try(:accepted_status) %> tooltip-item'><div class="tooltip pending">Status: <%= request.try(:accepted_status)%></div></span>
          <% if request.class == Apprenticeship
                path      = skill_path(request.skill)
                edit_path = edit_skill_path(request.skill)
             else
                path = skill_request_path(request)
                edit_path = edit_skill_request_path(request)
             end  %>
          <%=link_to request.try(:title) || request.try(:skill).try(:title), path %>
          <%= link_to edit_path do %>
            <i class="fa fa-gear"></i>
          <% end %>
        </h6>
        <h6 class="category">
          <% categories = request.try(:categories) || request.try(:skill).try(:categories) || [] %>
          <%= categories.limit(3).map{|category| category.name}.join(",").to_s%>
        </h6>
      </li>
      <%end%>
    </ul>
  </div>
</div>
