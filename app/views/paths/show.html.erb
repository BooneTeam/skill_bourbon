
<div class='skill-container'>
 <div class="vertical-tabs-container">
  <div class="vertical-tabs">
    <% @path.skills.each do |skill| %>
    <a href="#" class="js-vertical-tab vertical-tab" rel=<%=skill.id%>><%=skill.title %></a>
    <% end %>
  </div>


  <div class="vertical-tab-content-container">
    <% @path.skills.each do |skill| %>
    <a href="" class="js-vertical-tab-accordion-heading vertical-tab-accordion-heading is-active" rel=<%=skill.id%>>Title: <%= skill.title %></a>
    <div id=<%= skill.id %> class="js-vertical-tab-content vertical-tab-content">
      <% if @path.user == current_user %>
      <%= button_to "Edit skill", edit_skill_path(skill), method: :get, class: "pull-right" %>
      <% else %>
      <%= button_to "Skill Info", skill_path(skill), method: :get, class: "pull-right" %>
      <% end %>
      <h6 class="title">Title</h6>
      <p><%= skill.title %></p>
      <h6 class="title">Subtitle</h6>
      <p> <%= skill.subtitle %></p>
      <h6 class="title">Full Description</h6>
      <p><%= skill.full_description%></p>
      <ul>
        <h6 class="title"> Users enrolled in this skill </h6>
        <% skill.apprenticeships.each do |apprentice| %>
        <li><p><%= apprentice.user.username %></p></li>
        <% end %>
      </ul>
    </div>
    <% end %>

