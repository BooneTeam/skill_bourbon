<%= render 'skills/skill_intro' %>
<div class='skill-container'>
  <%= render 'skills/skill_bio' %>
  <div class='comments-and-recent'>
  <div class='recent-apprentices'>
    <h5 class='title'>Recent Apprentices</h5>
    <ul>
      <% @skill.apprenticeships.each do |apprenticeship| %>
      <li>
        <h6>Requested Apprenticeship Project</h6>
        <p><%= apprenticeship.request_description %></p>
        <h6>Completion Status</h6>
        <p><%= apprenticeship.completion_status %></p>
        <h6>Apprentice Level</h6>
        <p><%= apprenticeship.skill_level.title %></p>
      </li>
      <% end %>
    </ul>
  </div>
</div>
  <div class='skill-comments'>
    <h5 class='title'>Apprentice Reviews and Comments</h5>
    <%= render 'refills/comment' %>
  </div>
</div>
