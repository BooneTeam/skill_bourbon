<%= simple_form_for Apprenticeship.new, html: {id: 'new_apprenticeship_'+new_request.to_s} do |f| %>
<%= f.hidden_field :skill_id, value: @skill.id %>
<%= f.input :request_description, input_html: {value: new_request ? '' : @skill.full_description, maxlength:500, placeholder:"Enter a short description of what you'd like to learn. \n Max Characters: 500. You can discuss further later."}%>
<%= f.input :meeting_date_requested, :as => :datetime_picker, label: "When Would you Like to Meet With #{@skill.creator.username}" %>
<% location = new_request ? Location.new : @skill.location %>
<%= f.simple_fields_for location do |c| %>
<%#= f.hidden_field :location_id, value: location.id %>
<%= c.input :address, label: "Address" %>
<%= c.input :city, label: "City", value: @skill.location.city    %>
<%= c.input :state, label: "State", default: @skill.location.state %>
<%= c.input :zip, label: "Zip", html:{ value: @skill.location.zip }%>
<% end %>
 <%= f.input :skill_level_id, label: "Skill Level", as: :select, collection: SkillLevel.all, value_method: :id %>
<%= f.button :submit, value: 'Submit Request'%>
<% end %>
