<div class="dashboard_container user-container">
  <div id="message-us" align="center">
    <h3>Let us know what you're thinking</h3>

    <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <%= f.input :name,placeholder:"Name",label: false, :required => true %>
      <%= f.input :email,placeholder:"Email",label: false, :required => true %>
      <%= f.input :message,placeholder:"Got feedback? Let us know what you think.", label: false, :as => :text, :required => true%>
      <div class= "hidden">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div>
        </br>
        <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>