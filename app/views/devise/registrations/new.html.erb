<fieldset class="sign-up">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>

  <div><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></div>

  <div><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>
<%= render "devise/shared/links" %>
</fieldset>
<%= render "refills/user_sign_up_side_image" %>

</div>
